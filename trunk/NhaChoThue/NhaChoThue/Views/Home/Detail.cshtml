@model NhaChoThue.Models.DBContext.Product
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<meta name="description" content="@Model.Title" />
<meta name="keywords" content=""@Model.Title" />
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link href="/Content/styles/general.css?134612" rel="stylesheet" type="text/css" />
<!--[if IE 7]>
    <link href="css/ie7.css" rel="stylesheet" type="text/css" />
    <![endif]-->
<link href="/Content/styles/asset_detail.css" rel="stylesheet" type="text/css" />
<link href="/Content/styles/Asset.css" rel="stylesheet" type="text/css" />
<link href="/Content/styles/slides.css" rel="stylesheet" type="text/css" />
<link href="/Content/styles/tools.css" rel="stylesheet"s type="text/css" />
<link href="/Content/styles/uniform.default.css" rel="stylesheet" type="text/css" />
<link href="/Content/styles/doolv3.css" rel="stylesheet" type="text/css" />
<link href="/Content/styles/home.css" rel="stylesheet" type="text/css" />
<script src="/Scripts/slideshow/jquery.ad-gallery.js" type="text/javascript"></script>
<link href="/Scripts/slideshow/jquery.ad-gallery.css" rel="stylesheet" type="text/css" />
<script type="text/javascript">
        $(function () {
            if (@Model.Images.Count() != 0) {
  var galleries = $('.ad-gallery').adGallery();
            } else {
                document.getElementById("gallery").style.backgroundImage = "url('http://www.texasrealestate.com/images/defaultHouse.jpg')";
            }
        });
</script>
<div id="container">
    <div id="content_container">
        <div class="wrap">
            <div class="wrap">
                <div class="col_720">
                    <div id="result_detail" class="margin_bottom">
                        <div class="rounded_style_2 rounded_box margin_bottom">
                            <style type="text/css">
                                html
                                {
                                    height: 100%;
                                }
                                body
                                {
                                    height: 100%;
                                    margin: 0;
                                    padding: 0;
                                }
                                #map_canvas
                                {
                                    height: 100%;
                                }
                                #gallery
                                {
                                    width: 470px;
                                    background: #e1eef5;
                                }
                                .image1
                                {
                                    height: 50px;
                                }
                            </style>
                            <script src="/Scripts/home/jquery.lightbox-0.5.js" type="text/javascript"></script>
                            <link href="/Content/styles/jquery.lightbox-0.5.css" rel="stylesheet" type="text/css" />
                            <script type="text/javascript">
                                $(function () {
                                    $('#slider a').lightBox({ maxHeight: screen.height * 0.9,
                                        maxWidth: screen.width * 0.9
                                    });
                                });
                            </script>
                            @*<style type="text/css">
        /* jQuery lightBox plugin - Gallery style */
