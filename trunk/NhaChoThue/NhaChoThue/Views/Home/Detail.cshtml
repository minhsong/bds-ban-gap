                            <div class="body">
                                <h2 class="larger_title">[@Model.GetID()]@Model.Title</h2>
                                <span class="location">Vị trí: @Model.DuongTruocNha , phường @Model.Ward.WardName, Quận
                                    @Model.Ward.District.DistrictName, TP.HCM</span>
                                <div class="detail_info">
                                    <link href="/Content/styles/asset_detail.css" rel="stylesheet" type="text/css" />
                                    <div id="image_gallery" class="rounded_box rounded_style_2">
                                        <div id="gallery" class="ad-gallery">
                                            <div class="ad-image-wrapper">
                                            </div>
                                            <div class="ad-controls">
                                            </div>
                                            <div class="ad-nav">
                                                <div class="ad-thumbs">
                                                    <ul class="ad-thumb-list">
                                                        @foreach (var item in Model.Images)
                                                        {
                                                            <li><a href="@item.ImageLink" >
                                                                <img src="@item.ThumblLink" title="@item.Caption" alt="@Model.Title" class="image1">
                                                            </a></li>
                                                        }
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="right margin_left">
                                        <div class="features margin_bottom">
                                            <div class="currency_convertor">
                                                <div class="money">
                                                    @if (Model.IsHired)
                                                    {
                                                        <text> ĐÃ THUÊ
                                                        </text>  
                                                    }
                                                    else
                                                    {
                                                        if (Model.Price < 0)
                                                        {
                                                            <text> Giá: Thỏa thuận
                                                        </text>
                                                        }
                                                        else
                                                        {
                                                        <text> Giá: @(Model.Price)tr/Tháng
                                                        </text>
                                                        }
                                                    }
                                                </div>
                                            </div>
                                            <div class="feat_item">
                                                <dl>
                                                    <dt>Ngan:</dt>
                                                    <dd>
                                                        @(Model.Ngan)m</dd>
                                                    <dt>Dài:</dt>
                                                    <dd>@(Model.Dai)m</dd>
                                                    <dt>Phòng ngủ:</dt>
                                                    <dd>@(Model.SoPhongNgu)</dd>
                                                    <dt>WC:</dt>
                                                    <dd>@Model.SoPhongTam</dd>
                                                    <dt>Sân thượng:</dt>
                                                    <dd>
                                                        @if (Model.Santhuong)
                                                        {
                                                            <text> Có
                                                            </text>  
                                                        }
                                                        else
                                                        {
                                                            <text> Không
                                                            </text>  
                                                        }
                                                    </dd>
                                                    <dt>Số tầng:</dt>
                                                    <dd>@Model.SoLau</dd>
                                                </dl>
                                            </div>
                                        </div>
                                        <div class="contact_info margin_bottom">
                                            <h3 class="small_headline">
                                                THÔNG TIN LIÊN HỆ</h3>
                                            <div class="body">
                                                <h4>
                                                    <a href="" style="cursor: default">@Model.Contact.FullName</a></h4>
                                                <dl>
                                                    <dt>ĐT:&nbsp;</dt><dd>
                                                        <span>@Model.Contact.Phone</span>
                                                    </dd>
                                                    <dt>Email:&nbsp;</dt><dd>
                                                        <span>@Model.Contact.Email</span>
                                                    </dd>
                                                    <dt>Địa chỉ:&nbsp;</dt><dd>@Model.Contact.Address &nbsp;</dd>
                                                </dl>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div id="detail" class="margin_bottom">
                                    <div class="headline_title_1 rounded_style_5 rounded_box">
                                        <h2 class="headline">
                                            <span>MÔ TẢ CHI TIẾT</span></h2>
                                    </div>
                                    <div class="rounded_style_2 rounded_box">
                                        <div class="body">
                                            <p>@Html.Raw(Model.Description)</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="others_posted" class="rounded_style_2 rounded_box margin_bottom">
                        <div class="headline_title_1 rounded_style_5 rounded_box">
                            <h2 class="headline">
                                <span>BẤT ĐỘNG SẢN CÙNG GIÁ</span></h2>
                        </div>
                        <div class="rounded_style_2 rounded_box">
                            <div class="content_inner">
                                <ul class="listing_4" style="display:inline-block;">
                                    @{
                                        var ListCungGia = ViewBag.CungGia as IEnumerable<NhaChoThue.Models.DBContext.Product>;
                                        foreach (var item in ListCungGia)
                                        {
                                        <li><a href="/Home/Detail/@item.ProductID/@NhaChoThue.Helpers.DataConvertHelper.Titletransform(item.Title)">
                                            @if (item.Images.Count > 0)
                                            { 
                                            <img src="@item.Images.First().ThumblLink" width="75" height="75" alt="@item.Title" title="@item.Title" />
                                            }
                                            else
                                            { 
                                                <img src="/Content/images/Default-image.jpg" width="75" height="75" alt="@item.Title" title="@item.Title" />
                                            }
                                            </a>
                                                <div class="right">
                                                <h2 style="height:46px;overflow:hidden;padding-bottom:0px;">
                                                    <a href="/Home/Detail/@item.ProductID/@NhaChoThue.Helpers.DataConvertHelper.Titletransform(item.Title)">@(item.Title.Length > 50 ? item.Title.Substring(0, 50) + "..." : item.Title)</a></h2>
                                                <span class="price">
                                                @if (item.Price < 0)
                                                {
                                                    <text> Giá: Thỏa thuận
                                                </text>
                                                }
                                                else
                                                {
                                                <text> Giá: @(item.Price)tr/Tháng
                                                </text>
                                                }
                                                </span>
                                            </div>
                                        </li>
                                        }
                                        
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div id="others_posted2" class="rounded_style_2 rounded_box margin_bottom">
                        <div class="headline_title_1 rounded_style_5 rounded_box">
                            <h2 class="headline">
                                <span>BẤT ĐỘNG SẢN KHU VỰC @Model.Ward.District.DistrictName.ToUpper()</span></h2>
                        </div>
                        <div class="rounded_style_2 rounded_box">
                            <div class="content_inner">
                                <ul class="listing_4" style="display:inline-block">
                                    @{
                                        var ListCungKV = ViewBag.CungKV as IEnumerable<NhaChoThue.Models.DBContext.Product>;
                                        foreach (var item in ListCungKV)
                                        {
                                        <li style="margin-right:3px;"><a href="/Home/Detail/@item.ProductID/@NhaChoThue.Helpers.DataConvertHelper.Titletransform(item.Title)">
                                            @if (item.Images.Count > 0)
                                            { 
                                            <img src="@item.Images.First().ThumblLink" width="75" height="75" alt="@item.Title" title="@item.Title" />
                                            }
                                            else
                                            { 
                                                <img src="/Content/images/Default-image.jpg" width="75" height="75" alt="@item.Title" title="@item.Title" />
                                            }
                                            </a>
                                            <div class="right">
                                                <h2 style="height:46px;overflow:hidden;padding-bottom:0px;">
                                                    <a href="/Home/Detail/@item.ProductID/@NhaChoThue.Helpers.DataConvertHelper.Titletransform(item.Title)">@(item.Title.Length > 50 ? item.Title.Substring(0, 50) + "..." : item.Title)</a></h2>
                                                <span class="price">
                                                @if (item.Price < 0)
                                                {
                                                    <text> Giá: Thỏa thuận
                                                </text>
                                                }
                                                else
                                                {
                                                <text> Giá: @(item.Price)tr/Tháng
                                                </text>
                                                }
                                                </span>
                                            </div>
                                        </li>
                                        }
                                        
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
