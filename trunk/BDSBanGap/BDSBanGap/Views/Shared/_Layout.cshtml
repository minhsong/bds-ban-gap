<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <link href="../../Content/styles/home.css" rel="stylesheet" type="text/css" />
</head>

    <body>
        <div id="header">
	<div class="site-width margin-auto" style="padding-top:20px;">
		<a href=""><img src="../../Content/images/logo.gif" height="59"  class="png left" style="margin-left:20px;width:278px;"></a>
		<div class="header-search left" style="margin-left:70px;margin-top:15px;">
			<form id="menu_search_frm" action="http://www.autobay.vn/car/search_keyword" method="post">
				<input type="text" name="keyword" id="search_keyword" value="Nhập từ khóa" class="left ui-autocomplete-input" style="color:#000000;font-family:Arial;" autocomplete="off" role="textbox" aria-autocomplete="list" aria-haspopup="true">
				<button class="btn_timxe" type="submit" style="cursor:pointer;"></button>
				<br class="clearLeft">

			</form>
		</div>

		<div class="top-menu">
			<div class="navigator-house-rent mauto">
				<ul class="clearfix">
					<li class="home"><a href=""><p>&nbsp;</p></a></li>
					<li class="house-sell"><a href=""><p>&nbsp;</p></a></li>
					<li class="house-rent"><a href=""><p>&nbsp;</p></a></li>
					<li class="infomation"><a href=""><p>&nbsp;</p></a></li>

				</ul>
			</div>
		</div>
	</div>
	<div class="sub-top-menu">
		</div>
</div>
<div class="container site-width">
<div class="content">

<div class="left w235" id="colum-left">
<div class="element-left">
<div class="search-detail">
<div class="search-detail-header">
		<h3 class="search-detail-header-content">
			<div style="float:left;">
				<img src="../../Content/images/TimKiemNangCao.png" alt="">
			</div>
			<div>
				&nbsp; Tìm kiếm nâng cao
			</div>
		</h3>
	</div> <!--end div .search-detail-header -->
    <form action="" method="post" name="adv-search">
    <div class="search-content">
    <div class="search-content-padding">
    <!-- cmt layout div
    <div class="item-search-content" id="price-search">

    </div>
    <div class="item-search-content" id="place-search">

    </div>
    -->
    <p class="pt5">
    	<label class="left w60 pt2" style="font-weight:bold">Khu vực</label>
        <select name="place-search" class="selectbox place-search">
          <option value="allplace">Chọn tất cả</option>
          <option value="q1">Quận 1</option>
          <option value="q2">Quận 2</option>
          <option value="q3">Quận 3</option>
        </select>
    </p>
    <p class="pt5 pb10">
    	<label class="left w60 pt2" style="font-weight:bold">Giá</label>
        <select name="pricefrom" class="w70" id="from-price">
          <option value="allprice">Chọn tất cả</option>
          <option value="fr100">100</option>
          <option value="fr200">200</option>
          <option value="fr300">300</option>
        </select>
        <select name="priceto" class="w70 ml4" id="to-price">
          <option value="allprice">Chọn tất cả</option>
          <option value="to100">100</option>
          <option value="to200">200</option>
          <option value="to300">300</option>
        </select>
    </p>
    <div class="border-bot-dashed"></div>

    <input name="" type="image" class="btn-search-content right" src="../../Content/images/btn-search-content.gif" />
    <div class="clearRight"></div>
    </div>
    </div>
    </form>
</div> <!-- end div .search-detail -->
</div> <!-- end div .element-left-->

<div class="element-left">
	@Html.Partial("NhaUuTien") <!-- end .house-priority -->
</div> <!--end .element-left -->

<div class="element-left">
<input name="" href="" type="image" class="img-adv" src="../../Content/images/img-demo.jpg" border="1" />
</div>

</div> <!-- end div #colum-left-->

<div class="right" id="colum-right">
<div class="element-right">
	@RenderBody()
</div> <!-- end element-right -->

</div> <!-- end .right #colum-right -->



<div class="clearBoth"></div>
</div> <!--end content-->
</div> <!--end container-->
<div class="footer">
<!--end footer--></div>
        
    </body>
</html>
