@model BDSBanGap.Models.DBContext.Booked

@{
    ViewBag.Title = "DKBDS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/ckeditor/ckeditor.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Đăng ký mua bất động sản</legend>

        <table>
            <tbody>
                <tr>
                    <td>
                        Tên:
                    </td>
                    <td>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.FullName)
                            @Html.ValidationMessageFor(model => model.FullName)
                        </div>
                    </td>

                    <td>
                        Điện thoại:
                    </td>
                    <td>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Phone)
                            @Html.ValidationMessageFor(model => model.Phone)
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        Email:
                    </td>
                    <td>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Email)
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>
                    </td>

                    <td>
                        Mục đích đăng ký:
                    </td>
                    <td>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Type)
                            @Html.ValidationMessageFor(model => model.Type)
                        </div>
                    </td>
                </tr>
                 <tr>
                    <td>
                        Giá từ
                    </td>
                    <td>
                       <div class="editor-field">
                            @Html.EditorFor(model => model.MinPrice)
                            @Html.ValidationMessageFor(model => model.MinPrice)
                        </div>
                    </td>

                    <td>
                        Đến
                    </td>
                    <td>
                         <div class="editor-field">
                            @Html.EditorFor(model => model.MaxPrice)
                            @Html.ValidationMessageFor(model => model.MaxPrice)
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
       
        <div class="editor-label">
            Mô tả chi tiết
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
        </div>
        <br />     
        <p>
            <input type="submit" value="Gởi thông tin" />
        </p>
    </fieldset>
}
<style type="text/css">
    td {
        border:none;
    }
    table {
        border:none;
    }
</style>
<script type="text/javascript">
    CKEDITOR.replace('Description', {
        toolbar: 'Basic',
        uiColor: '#9AB8F3'
    });
</script>