@model NhaChoThue.Models.DBContext.Consignment

@{
    ViewBag.Title = "Ký gởi nhà cho thuê";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="/Scripts/ckeditor/ckeditor.js"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Ký gởi nhà</legend>
        <table>
            <tbody>
                <tr>
                    <td>
                        Tên đầy đủ:
                    </td>
                    <td>
                        @Html.EditorFor(model => model.FullName)
                        @Html.ValidationMessageFor(model => model.FullName)
                    </td>
                </tr>
                <tr>
                    <td>
                        Số điện thoại:
                    </td>
                    <td>
                        @Html.EditorFor(model => model.Phone)
                        @Html.ValidationMessageFor(model => model.Phone)
                    </td>
                </tr>
                <tr>
                    <td>
                        Email:
                    </td>
                    <td>
                        @Html.EditorFor(model => model.Email)
                        @Html.ValidationMessageFor(model => model.Email)
                    </td>
                </tr>
                <tr>
                    <td>
                        Địa chỉ:
                    </td>
                    <td>
                        @Html.EditorFor(model => model.Address)
                        @Html.ValidationMessageFor(model => model.Address)
                    </td>
                </tr>
                <tr>
                    <td>
                        Giá mong muốn:
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.Price, new { style="text-align:right;"}) triệu/Tháng
                        @Html.ValidationMessageFor(model => model.Price)
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <div class="editor-label">Mô tả chi tiết</div>
                        @Html.TextAreaFor(model => model.Description)
                        @Html.ValidationMessageFor(model => model.Description)
                    </td>
                </tr>
            </tbody>
        </table>
        <p>
            <input type="submit" value="Ký gởi nhà" />
        </p>
    </fieldset>
    <script type="text/javascript">
        CKEDITOR.replace('Description', {
            toolbar: 'Basic',
            uiColor: '#9AB8F3'
        });
    </script>
}

