@model VuongMinhQuoc.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript" src="/Scripts/jquery.timers-1.2.js"></script>
<script type="text/javascript" src="/Scripts/jquery.easing.1.3.js"></script>
<script type="text/javascript" src="/Scripts/jquery.galleryview-3.0-dev.js"></script>
<link rel="stylesheet" type="text/css" href="/Content/css/jquery.galleryview-3.0-dev.css" />
<script>
    $(function () {
        $('#myGallery').galleryView({
            panel_width: 900,
            panel_height: 500,
            frame_width: 80,
            frame_height: 50,
            autoplay: true,
            enable_overlays: true
        });
    });
</script>

<div id="pageBody">
    <div id="content" class="reset">
        <h2>@Model.Title</h2>
        <p>@VuongMinhQuoc.Utils.StringHelper.StripHTML(@Model.Description)</p>
        <div id="inner">
            <ul id="myGallery">
                <li>
                    <img src="@Model.Imanges.First().Link" title="Lone Tree Yellowstone" data-description="@Model.Imanges.First().Caption" />
                <li>                 
            </ul>
        </div>
    </div>
</div>
