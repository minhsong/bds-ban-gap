@model VuongMinhQuoc.Models.Category

@{
    ViewBag.Title = "Tạo loại bài viết";
}
<script type="text/javascript" src="/scripts/ckeditor/ckeditor.js"></script>
<link href="/content/css/ckeditor.css" rel="stylesheet" type="text/css" media="print" />
<script type="text/javascript">
$(document).ready(function(){
    $("#category").addClass("current");
});
</script>
<div id="page-heading">
    <h2>Tạo Loại Bài Viết</h2>
</div>
<table border="0" width="100%" id="content-table">
    <tr>
        <th rowspan="3" class="sized">
            <img src="~/Content/images/shared/side_shadowleft.jpg" width="20" height="300" alt="" /></th>
        <th class="topleft"></th>
        <td id="tbl-border-top">&nbsp;</td>
        <th class="topright"></th>
        <th rowspan="3" class="sized">
            <img src="~/Content/images/shared/side_shadowright.jpg" width="20" height="300" alt="" /></th>
    </tr>
    <tr>
        <td id="tbl-border-left"></td>
        <td>
            <!--  start content-table-inner -->

            @Html.BeginForm("Create", "CategoryManagement", FormMethod.Post, new { enctype = "multipart/form-data" }){
            
            <div id="content-table-inner">
                <table border="0" width="100%">
                    <tr valign="top">
                        <td>
                            <!-- start id-form -->
                            <table border="0" id="id-form">
                                <tr>
                                    <th style="width:100px;">Kiểu bài viết:</th>
                                    <td>@Html.TextBoxFor(model => model.Type, new { @class = "inp-form" })
                                        @Html.ValidationMessageFor(model => model.Type)</td>
                                </tr>                               
                                <tr>
                                    <th style="width:100px;">Loại bài viết:</th>
                                    <td>@Html.TextBoxFor(model => model.Name, new { @class = "inp-form" })
                                        @Html.ValidationMessageFor(model => model.Name)</td>
                                </tr>
                                <tr>                             
                                    <th style="width:100px;">Mô tả:</th>
                                    <td colspan="3">@Html.TextAreaFor(model => model.Description, new { @class = "ckeditor" })
                                        @Html.ValidationMessageFor(model => model.Description)</td>
                                </tr>
                                <tr>
                                    <th>&nbsp;</th>
                                    <td>
                                        <input type="submit" value="Tạo" class="btn" />
                                        <input type="reset" value="Hủy" class="btn" />
                                    </td>
                                    <td></td>
                                </tr>
                            </table>
                            <!-- end id-form  -->
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <img src="~/Content/images/shared/blank.gif" width="695" height="1" alt="blank" /></td>
                        <td></td>
                    </tr>
                </table>
                <div class="clear"></div>
            </div>
            <!--  end content-table-inner  -->
            }
        </td>
        <td id="tbl-border-right"></td>
    </tr>
    <tr>
        <th class="sized bottomleft"></th>
        <td id="tbl-border-bottom">&nbsp;</td>
        <th class="sized bottomright"></th>
    </tr>
</table>
<div class="clear">&nbsp;</div>
<div>
    @Html.ActionLink("Trở lại trang trước", "Index")
</div>